{
  "build": {
    "builder": "python",
    "buildCommand": "pip install -r requirements.txt"
  },
  "start": {
    "command": "python main.py"
  },
  "env": {
    "FLASK_ENV": "development",
    "FLASK_APP": "main.py",
    "FLASK_SECRET_KEY": "your_default_secret",
    "OPENAI_API_KEY": "your_openai_api_key"
  }
}